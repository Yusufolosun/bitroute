{
  "name": "bitroute",
  "version": "1.0.0",
  "description": "BitRoute: DEX aggregator for Bitcoin L2s on Stacks. Finds best price across DEXs and executes swaps with optimal routing.",
  "private": true,
  "scripts": {
    "dev": "npm --prefix frontend run dev",
    "build": "npm --prefix frontend run build",
    "start": "npm --prefix frontend run start",
    "test:contracts": "cd contracts && clarinet test",
    "check:contracts": "cd contracts && clarinet check",
    "deploy": "node scripts/deploy.js",
    "install:all": "npm install && cd frontend && npm install"
  },
  "keywords": [
    "dex",
    "aggregator",
    "stacks",
    "bitcoin",
    "clarity",
    "blockchain",
    "defi"
  ],
  "author": "Your Name <your.email@example.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/bitroute.git"
  },
  "homepage": "https://github.com/yourusername/bitroute#readme",
  "bugs": {
    "url": "https://github.com/yourusername/bitroute/issues"
  },
  "devDependencies": {
    "@stacks/network": "^6.13.0",
    "@stacks/transactions": "^6.13.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
